import 'dart:convert';
import 'package:flutter/material.dart';
import 'package:http/http.dart' as http;

void main() {
  runApp(MyApp());
}

class MyApp extends StatefulWidget {
  @override
  _MyAppState createState() => _MyAppState();
}

class _MyAppState extends State<MyApp> {
  Quotes? _quote;

  @override
  void initState() {
    super.initState();
    _fetchNewQuote();
  }

  Future<void> _fetchNewQuote() async {
    Quotes quote = await getQuotesFromApi();
    setState(() {
      _quote = quote;
    });
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          backgroundColor: Colors.white,
          title: Text("Jay's quote app", style: TextStyle(color: Colors.black)),
          leading: Padding(
            padding: const EdgeInsets.all(8.0),
            child: Image.asset('assets/app_icon.png'),
          ),
          actions: [
            IconButton(
              icon: Image.asset('assets/menu_icon.png'),
              onPressed: () {
                // action on press
              },
            ),
          ],
        ),
        body: Center(
          child: Column(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Container(
                width: 350,
                height: 350,
                color: Colors.red,
                child: Column(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    Text(
                      "Jay's Quote Generator",
                      style: TextStyle(fontSize: 24, fontWeight: FontWeight.bold),
                    ),
                    SizedBox(height: 16),
                    _quote != null 
                      ? Column(
                          children: [
                            Text(
                              '"${_quote!.quote}"',
                              style: TextStyle(fontSize: 18),
                              textAlign: TextAlign.center,
                            ),
                            SizedBox(height: 8),
                            Text(
                              '- ${_quote!.author}',
                              style: TextStyle(fontSize: 18, fontStyle: FontStyle.italic),
                              textAlign: TextAlign.right,
                            ),
                          ],
                        )
                      : CircularProgressIndicator(),
                  ],
                ),
              ),
              SizedBox(height: 20),
              ElevatedButton(
                onPressed: _fetchNewQuote,
                child: Text(
                  'Generate New Quote',
                  style: TextStyle(fontSize: 18),
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}

class Quotes {
  final String author;
  final String quote;
  Quotes({ required this.author, required this.quote});

  factory Quotes.fromJson(Map<String, dynamic> json) {
    return Quotes(
      author: json["author"],
      quote: json["content"]
    );
  }
}

Future<Quotes> getQuotesFromApi() async {
  var response = await http.get(Uri.parse('https://api.quotable.io/random'));
  return Quotes.fromJson(jsonDecode(response.body));
}
